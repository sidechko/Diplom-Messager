<Window x:Class="MessagerClient.CreateNewChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessagerClient"
        mc:Ignorable="d"
        Title="CreateNewChannelDialog" Height="300" Width="500" MaxHeight="300" MaxWidth="500" MinHeight="300" MinWidth="500">
    <StackPanel Margin="20">
        <Label>Channel Name</Label>
        <TextBox Name="ChNameTB"/>
        
        <Label>Channel Decsription</Label>
        <RichTextBox Name="ChDescTB" Height="100"/>

        <Button Name="CreateButton" Margin="0 10 0 0" Click="CreateButton_Click">Create</Button>
    </StackPanel>
</Window>
